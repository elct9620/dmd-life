{
  "name": "DMD-Life",
  "version": "1.0.0",
  "description": "銘傳大學 數位媒體設計學系桌遊改編 Web Game - 數媒人生",
  "main": "app.coffee",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "forever start -c coffee server.coffee",
    "watch-js": "watchify --extension='.cjsx' --extension='.coffee' app/app.cjsx -o public/js/app.js -v",
    "watch-css": "node-sass --include-path ./bourbon --source-map -w sass/ -r -x -o ./public/css sass/app.scss app.css",
    "watch": "npm run watch-js & npm run watch-css & nodemon server.coffee",
    "build-js": "NODE_ENV=production browserify --extension='.cjsx' --extension='.coffee' app/app.cjsx | uglifyjs -cm > public/js/app.min.js",
    "build-css": "node-sass --include-path ./bourbon -o ./public/css --output-style compressed ./sass/app.scss app.css",
    "build": "npm run build-js & npm run build-css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elct9620/dmd-life.git"
  },
  "author": "蒼時弦也",
  "license": "Apache",
  "bugs": {
    "url": "https://github.com/elct9620/dmd-life/issues"
  },
  "homepage": "https://github.com/elct9620/dmd-life",
  "browserify": {
    "transform": [
      "coffee-reactify",
      "envify"
    ]
  },
  "dependencies": {
    "coffee-script": "^1.8.0",
    "express": "^4.10.6",
    "flux": "^2.0.1",
    "forever": "^0.14.0",
    "react": "^0.12.2",
    "socket.io": "^1.2.1",
    "watchr": "^2.4.12"
  },
  "devDependencies": {
    "browserify": "^8.0.2",
    "coffee-reactify": "^2.1.0",
    "envify": "^3.2.0",
    "express-livereload": "0.0.24",
    "node-sass": "^1.2.3",
    "nodemon": "^1.2.1",
    "uglify-js": "^2.4.16",
    "watchify": "^2.2.1"
  }
}
